<div class="card">
        <div class="card-body">
            <h5 class="card-title">Sign In</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="email@example.com">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", id:"email", placeholder:"email@example.com" %>
                </div>
                <div class="form-group">
                    <%= f.label :password, for: "password" %><br />
                    <%= f.password_field :password, autocomplete: "current-password",class:"form-control", id:"password", placeholder:"Password" %>
                </div>

                 <% if devise_mapping.rememberable? %>
                  <div class="form-group form-check">
                    <%= f.check_box :remember_me, class:"form-check-input", id:"rememberMe" %>
                    <%= f.label :remember_me, class:"form-check-label", for:"rememberMe" %>
                  </div>
                <% end %>
                <%= f.submit "Sign in", class: 'btn btn-success ml-2' %>
            </form>
        </div>
        <div class="form-footer">
        <%= render "devise/shared/links" %>
        </div>
        <% end %>
    </div>