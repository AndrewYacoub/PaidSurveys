<!<!-- app/views/profiles/show.html.erb -->
<h1>Profile</h1>
<p><strong>Email:</strong> <%= @user.email %></p>
<%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-warning' %>

<h2>Wallet</h2>
<% if @user.wallet %>
  <p><strong>Provider:</strong> <%= @user.wallet.provider %></p>
  <p><strong>Wallet Number:</strong> <%= @user.wallet.wallet_number %></p>

  <%= link_to 'Edit Wallet', edit_wallet_path, class: 'btn btn-warning' %>
  <%= link_to 'Delete Wallet', wallet_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'Create Wallet', new_wallet_path, class: 'btn btn-primary' %>
<% end %>

<h2>Bank Account</h2>
<% if @user.bank_account %>
  <p><strong>Bank Name:</strong> <%= @user.bank_account.bank_name %></p>
  <p><strong>Account Number:</strong> <%= @user.bank_account.account_number %></p>
  <%= link_to 'Edit Bank Account', edit_bank_accounts_path, class: 'btn btn-warning' %>
<% else %>
  <%= link_to 'Add Bank Account', new_bank_account_path, class: 'btn btn-primary' %>
<% end %>
