<!-- app/views/transactions/index.html.erb -->
<h1>Transactions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Payment Method</th>
      <th>Status</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount %></td>
        <td><%= transaction.payment_method %></td>
        <td><%= transaction.status %></td>
        <td><%= transaction.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>