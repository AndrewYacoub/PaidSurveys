<style>
  .form-container {
    max-width: 600px;
    margin: auto;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    background-color: #ffffff;
  }
  .form-container h2 {
    text-align: center;
    margin-bottom: 20px;
  }
  .form-group {
    margin-bottom: 15px;
  }
  .form-group label {
    font-weight: bold;
  }
  .form-group input {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  .form-actions {
    text-align: center;
  }
  .form-actions input[type="submit"] {
    background-color: #007bff;
    color: #ffffff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  .form-actions input[type="submit"]:hover {
    background-color: #0056b3;
  }
  .btn-secondary {
    background-color: #6c757d;
    color: #ffffff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 10px;
  }
  .btn-secondary:hover {
    background-color: #5a6268;
  }
</style>

<div class="form-container">
  <h2>Edit Wallet</h2>
  <%= form_with(model: @wallet, url: @wallet.persisted? ? wallet_path(@wallet) : wallet_path, local: true) do |form| %>
    <% if @wallet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@wallet.errors.count, "error") %> prohibited this wallet from being saved:</h2>
        <ul>
          <% @wallet.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :provider %>
      <%= form.text_field :provider, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :wallet_number %>
      <%= form.number_field :wallet_number, class: 'form-control' %>
    </div>
    <div class="form-actions">
      <%= form.submit 'Update Wallet', class: 'btn btn-primary text-white' %>
      <%= link_to 'Back', wallets_path, class: 'btn btn-secondary text-white' %>
    </div>
  <% end %>
</div>
