<!-- app/views/categories/_products.html.erb -->
<% if products.any? %>
  <ul class="list-group">
    <% products.each do |product| %>
      <li class="list-group-item">
        <%= link_to product.name, category_product_path(@category, product), class: 'list-group-item' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="alert alert-info">No products available for this category.</div>
<% end %>
