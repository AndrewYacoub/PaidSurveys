<style>
  .question-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    border: 1px solid #dee2e6;
    border-radius: 0.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #fff;
  }
  .question-header {
    font-size: 2rem;
    color: #343a40;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
  }
  .survey-link {
    font-size: 1rem;
    color: #007bff;
    text-decoration: none;
    margin-bottom: 20px;
    display: block;
    text-align: center;
  }
  .choices-header {
    font-size: 1.5rem;
    color: #343a40;
    font-weight: bold;
    margin-bottom: 20px;
  }
  .btn-primary {
    margin-bottom: 20px;
    display: block;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }
  .table {
    width: 100%;
    margin-bottom: 1rem;
    color: #212529;
  }
  .table th,
  .table td {
    padding: 0.75rem;
    vertical-align: top;
    border-top: 1px solid #dee2e6;
  }
  .table thead th {
    vertical-align: bottom;
    border-bottom: 2px solid #dee2e6;
  }
  .table tbody + tbody {
    border-top: 2px solid #dee2e6;
  }
  .table .btn {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    margin: 0 0.25rem;
  }
  .btn-secondary {
    margin-top: 20px;
    display: block;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }
</style>

<div class="question-container">
  <h1 class="question-header"><%= @question.content %></h1>
  <p><strong>Survey:</strong> <%= link_to @question.survey.title, category_product_survey_path(@category, @product, @survey), class: 'survey-link' %></p>

  <h2 class="choices-header">Choices</h2>
  <%= link_to 'New Choice', new_category_product_survey_question_choice_path(@category, @product, @survey, @question), class: 'btn btn-primary text-white' %>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Correct</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @question.choices.each do |choice| %>
        <tr>
          <td><%= choice.content %></td>
          <td><%= link_to 'Edit', edit_category_product_survey_question_choice_path(@category, @product, @survey, @question, choice), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', category_product_survey_question_choice_path(@category, @product, @survey, @question, choice), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back to Survey', category_product_survey_path(@category, @product, @survey), class: 'btn btn-secondary text-white' %>
</div>
